<h3><em><p class="text-info">Registro</p></em></h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <% if resource.errors.any? %>
  <div class="alert alert-error">
      <a class="close" data-dismiss="alert">&#215;</a>
 
      <h2><%= pluralize(resource.errors.count, "error") %></h2>

      <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<p><%= f.label :nombre %>
<%= f.text_field :name %></p>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :contraseña %>
  <%= f.password_field :password %></div>

  <div><%= f.label :confirmar_contraseña %>
  <%= f.password_field :password_confirmation %></div><br/>

  <div><%= f.submit "Registrarse", :class=>"btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
